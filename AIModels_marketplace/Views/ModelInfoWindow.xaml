<Window x:Class="AIModels_marketplace.Views.ModelInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о модели" Height="480" Width="640" ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="TitleTextBlock" FontSize="18" FontWeight="Bold"/>

        <ScrollViewer Grid.Row="2">
            <StackPanel>
                <TextBlock Name="DescriptionTextBlock" TextWrapping="Wrap" Margin="0,6,0,6"/>
                <TextBlock Name="MetadataTextBlock" Margin="0,6,0,6"/>
                <TextBlock Text="Параметры:" FontWeight="Bold" Margin="0,8,0,4"/>
                <StackPanel Name="ParametersPanel" Margin="8,0,0,0"/>
                <TextBlock Text="Версии:" FontWeight="Bold" Margin="0,8,0,4"/>
                <ItemsControl Name="VersionsList" Margin="8,0,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,2,0,6"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBlock Text="Специфичные поля модели:" FontWeight="Bold" Margin="0,8,0,4"/>
                <StackPanel Name="SpecificPanel" Margin="8,0,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Закрыть" Height="25" Width="100" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>