<Window x:Class="AIModels_marketplace.Views.ModelEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор модели" Height="440" Width="540" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <Label Content="Тип:" Width="80"/>
                <ComboBox Name="TypeComboBox" Width="150" SelectionChanged="TypeComboBox_SelectionChanged">
                    <ComboBoxItem>Vision</ComboBoxItem>
                    <ComboBoxItem>Audio</ComboBoxItem>
                    <ComboBoxItem>Text</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Label Content="Название:" Width="80"/>
                <TextBox Name="NameTextBox" Width="380" Height="25" FontSize="14"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Label Content="Описание:" Width="80"/>
                <TextBox Name="DescriptionTextBox" Width="380" Height="25" FontSize="14"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Label Content="Версия:" Width="80"/>
                <TextBox Name="VersionTextBox" Width="150" Height="25" FontSize="14" />
                <Label Content="Примечание:" Width="90" Margin="8,0,0,0"/>
                <TextBox Name="VersionNotesTextBox" Width="132" Height="25" FontSize="14"/>
            </StackPanel>

            <!-- Vision -->
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0" Name="VisionPanel">
                <Label Content="Макс. разрешение:" Width="120"/>
                <TextBox Name="MaxResolutionTextBox" Width="200" Height="25" FontSize="14"/>
            </StackPanel>

            <!-- Audio -->
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0" Name="AudioPanel" Visibility="Collapsed">
                <Label Content="SampleRate:" Width="120"/>
                <TextBox Name="SampleRateTextBox" Width="300"/>
            </StackPanel>

            <!-- Text -->
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0" Name="TextPanel" Visibility="Collapsed">
                <Label Content="MaxTokens:" Width="120"/>
                <TextBox Name="MaxTokensTextBox" Width="300"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.ColumnSpan="2">
            <Button Name="SaveButton" Content="Сохранить" Width="100" Click="SaveButton_Click"/>
            <Button Name="CancelButton" Content="Отмена" Width="100" Margin="8,0,0,0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>