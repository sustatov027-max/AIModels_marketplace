<Page x:Class="AIModels_marketplace.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="LoginPage">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Width="380">
            <TextBlock Text="Вход в аккаунт" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <Label Content="Имя пользователя"/>
            <TextBox Name="UsernameTextBox" Height="25" VerticalAlignment="Center" FontSize="14"/>
            <Label Content="Пароль" Margin="0,8,0,0"/>
            <PasswordBox Name="PasswordBox" Height="25" VerticalAlignment="Center" FontSize="14"/>
            <Button Content="Войти" Width="120" Margin="0,12,0,0" Click="Login_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,16,0,0">
            <TextBlock VerticalAlignment="Center">Нет аккаунта?</TextBlock>
            <Button Content="Перейти к регистрации" Margin="8,0,0,0" Click="GoRegister_Click"/>
        </StackPanel>
    </Grid>
</Page>